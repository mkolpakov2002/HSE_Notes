<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryFDroidDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryFDroidDark</item>
        <item name="colorAccent">@color/colorPrimaryFDroidDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryFDroidDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryFDroidDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:colorControlActivated">?attr/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimaryContainer">@color/colorPrimaryFDroidDark</item>
        <item name="colorSecondaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnSecondaryContainer">@color/colorPrimaryFDroidDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorPrimarySurface">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorOnPrimaryFDroidDark</item>
        <item name="android:textColorSecondary">@color/colorOnPrimaryFDroidDark</item>
    </style>
</resources>