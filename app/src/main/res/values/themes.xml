<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryPixel</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkPixel</item>
        <item name="colorAccent">@color/colorPrimaryPixel</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryPixel</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryPixel</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkPixel</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryPixel</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimaryContainer">?attr/colorSurface</item>
        <item name="colorOnPrimaryContainer">?attr/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:colorControlActivated">?attr/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowSecondaryLight</item>
        <item name="android:textColorPrimary">@color/colorOnPrimaryPixel</item>
        <item name="android:textColorSecondary">@color/colorOnPrimaryPixel</item>
    </style>
</resources>